apiVersion: v1
kind: ConfigMap
metadata:
  name: loki-data-source
  namespace: {{ grafana_namespace }}
  labels:
    grafana_datasource: '1'
data:
  loki-stack-datasource.yaml: |-
    apiVersion: 1
    datasources:
    - name: LokiAuto
      type: loki
      access: proxy
      orgId: 1
      url: http://{{ loki_service }}:3100